<Window x:Name="mainWindow" x:Class="WASP_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WASP_Planner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF001240" Foreground="#FF001D68">
    <Grid x:Name="mainGrid" SizeChanged="onGridResize">
        <Border BorderThickness="1" Margin="10,30,0,0" Background="#FFE0E9FF" VerticalAlignment="Top" Height="364" HorizontalAlignment="Left" Width="250" SizeChanged="onBorderResize">
            <Border BorderThickness="1" Margin="9,9,0,0" Background="#FF0B1C48" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="230" SizeChanged="onBorderResize">
                <TextBlock HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Foreground="White" Text="Активность друзей" FontSize="15" FontFamily="Segoe UI" FontWeight="Normal" Margin="5,1,0,0" FontStyle="Normal" TextDecorations="{x:Null}"/>
            </Border>
        </Border>
        <Border BorderThickness="1" Margin="280,30,0,0" Background="#FFE0E9FF" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="364" SizeChanged="onBorderResize">
            <Border BorderThickness="1" Margin="9,9,0,0" Background="#FF0B1C48" HorizontalAlignment="Left" VerticalAlignment="Top" Width="212" Height="27" SizeChanged="onBorderResize">
                <TextBlock x:Name="DateTextBlock" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Foreground="LightGray" Text="Активность друзей" FontSize="15" FontFamily="Segoe UI" FontWeight="Normal" Margin="6,1,0,0" FontStyle="Normal" TextDecorations="{x:Null}" Initialized="OnDateTextBlockInitialized"/>
            </Border>
        </Border>
        <Border BorderThickness="1" Margin="538,217,0,0" Background="#FFE0E9FF" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Height="177" SizeChanged="onBorderResize">
            <Border BorderThickness="1" Margin="9,9,0,0" Background="#FF0B1C48" HorizontalAlignment="Left" VerticalAlignment="Top" Width="209" Height="27" SizeChanged="onBorderResize">
                <TextBlock x:Name="testBlock" HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" Foreground="LightGray" Text="Уведомления" FontSize="15" FontFamily="Segoe UI" FontWeight="Normal" Margin="6,1,0,0" FontStyle="Normal" TextDecorations="{x:Null}"/>
            </Border>
        </Border>
        <Calendar x:Name="mainCalendar" HorizontalAlignment="Left" Height="177" VerticalAlignment="Top" Width="220" Margin="538,30,0,0" Foreground="#FF0B1C48" SelectedDatesChanged="OnMainCalendarSelectedDatesChanged"/>

    </Grid>
</Window>
